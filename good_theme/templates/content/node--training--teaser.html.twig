<article{{ attributes.addClass('training-node-teaser') }}>
  <div class="training-node-teaser-top">
    {# DIVs for flexbox grouping #}
    <div class="training-node-teaser-top-left">
      {{ content.field_training_level }}
      {{ content.field_training_proficiency }}
      {{ content.field_training_ceus_offered }}
      {{ content.field_training_cost }}
    </div>
    <div class="training-node-teaser-top-right">
      {{ content.field_training_source }}
      {{ content.field_training_published_date }}
    </div>
    {% if content.field_training_expiration_date|render %}
      <div class="training-node-teaser-expires">{{ 'Expires'|t }} <span>{{ content.field_training_expiration_date }}</span></div>
    {% endif %}
  </div>
  <h3>{{ label }}</h3>
  {{ content.field_training_total_time }}
  {#{{ content.field_training_time_to_start }}#}
  {{ content.field_training_description }}
  <div class="training-teaser-link-wrapper">
    {{ content.flag_bookmark }}
    <a href="{{ url }}" class="training-teaser-link">{{ 'View Training'|t }}</a>
    {% if elements.enrollment_link|render %}
      {{ elements.enrollment_link }}
    {% endif %}
  </div>
</article>